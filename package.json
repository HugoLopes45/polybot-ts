{
  "name": "@polybot/sdk",
  "version": "0.1.0",
  "description": "Production-grade Polymarket trading SDK â€” strategies in 100 LOC",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --project integration",
    "ci": "pnpm lint && pnpm typecheck && pnpm test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^25.2.3",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^3.0.5",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "author": "HugoLopes45",
  "repository": {
    "type": "git",
    "url": "https://github.com/HugoLopes45/polybot-ts.git"
  },
  "homepage": "https://github.com/HugoLopes45/polybot-ts#readme",
  "bugs": {
    "url": "https://github.com/HugoLopes45/polybot-ts/issues"
  },
  "keywords": [
    "polymarket",
    "trading",
    "sdk",
    "ddd",
    "typescript",
    "prediction-markets"
  ],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "packageManager": "pnpm@9.15.4",
  "dependencies": {
    "@polymarket/clob-client": "^5.2.1",
    "decimal.js-light": "^2.5.1",
    "eventemitter3": "^5.0.4",
    "pino": "^9.14.0",
    "viem": "^2.45.3",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  }
}
