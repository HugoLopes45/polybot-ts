# Polybot SDK Configuration
# Copy to .env and fill in values

# ── Wallet ────────────────────────────────────────────
# Private key for signing orders (hex, with 0x prefix)
POLYBOT_PRIVATE_KEY=0x...

# ── Polymarket API ────────────────────────────────────
# API key (derived from wallet via L2 auth flow)
POLYBOT_API_KEY=
POLYBOT_API_SECRET=
POLYBOT_API_PASSPHRASE=

# ── Chain ─────────────────────────────────────────────
# Polygon RPC URL (default: public RPC)
POLYBOT_RPC_URL=https://polygon-rpc.com

# Chain ID (137 = Polygon mainnet, 80001 = Mumbai testnet)
POLYBOT_CHAIN_ID=137

# ── Trading ───────────────────────────────────────────
# Paper trading mode (true = no real orders)
POLYBOT_PAPER_MODE=true

# Maximum daily loss in USDC before kill switch
POLYBOT_MAX_DAILY_LOSS_USDC=500

# Maximum single order size in USDC
POLYBOT_MAX_ORDER_SIZE_USDC=100

# ── Logging ───────────────────────────────────────────
# Log level: debug, info, warn, error
POLYBOT_LOG_LEVEL=info
